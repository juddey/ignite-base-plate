{
  "version": "0.0.1",
  "scripts": {
    <% if (props.i18n) { %>
      "add-locale": "lingui add-locale",
      "extract": "lingui extract",
      "compile": "lingui compile",
    <% } %>
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "lint": "prettier-standard 'src/**/*.js'",
    "precommit": "lint-staged",
    "storybook": "storybook start -p 7007"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "ramda": "0.25.0",
    <% if (props.i18n === true) { %> "@lingui/react": "2.2.0", <% } %>
    "react-native-keychain": "3.0.0"
  },
  "devDependencies": {
    <% if (props.storybooks) { %>
    "@storybook/addon-actions": "^4.0.2",
    "@storybook/addon-links": "^4.0.2",
    "@storybook/addons": "^4.0.2",
    "@storybook/react-native": "^4.0.2",
    "react-dom": "^16.6.0",
    <% } %>
    <% if (props.i18n) { %>
      "@babel/core": "7.1.2",
      "babel-core": "7.0.0-bridge.0",
      "babel-plugin-macros": "^2.4.2",      
      "@lingui/cli": "^2.7.0",
      "@lingui/macro": "^2.7.0",
      <% } %>
    <% if (props.linter === true) { %>
      "prettier-standard": "^8.0.1", 
      "husky": "0.14.3",
      "lint-staged": "7.1.0",
    <% } %>
    "npm-run-all": "4.1.5",
    "react-native-dotenv": "^0.2.0",
    "reactotron-react-native": "2.1.0"
  },
  "rnpm": {
    "assets": [
      "./src/theme/fonts/"
    ]
  } <% if (props.linter === true) { %> ,
  "standard": {
    "globals": [
      "__DEV__",
      "beforeAll",
      "afterAll",
      "test",
      "expect",
      "describe"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": ["prettier-standard src/**/*.js", "git add"],
    "*.md": ["prettier-standard src/**/*.md", "git add"],
    "*.json": ["prettier-standard src/**/*.json", "git add"]
  }
 <% } %>
}
